<?xml version="1.0"?>

<assembly>
	<id>uberjar</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.outputDirectory}</directory>
			<outputDirectory>/</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<unpack>false</unpack>
			<scope>runtime</scope>
			<includes>
				<include>info.aduna.commons:*</include>
				<include>org.antlr:*</include>
				<include>org.semanticdesktop.aperture:*</include>
				<include>commons-cli:*</include>
				<include>commons-configuration:*</include>
				<include>commons-net:*</include>
				<include>com.enterprisedt:*</include>
				<include>jcifs:*</include>
				<include>com.sun.jersey:*</include>
				<include>org.textmining:*</include>
				<include>xmlenc:*</include>
				<include>net.java.dev.jets3t:*</include>
				<include>org.apache.hadoop:*</include>
				<include>com.google.protobuf:*</include>
			</includes>
		</dependencySet>
	</dependencySets>
</assembly>
